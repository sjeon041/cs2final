{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++ (all .cpp files)",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "echo BUILDING via tasks.json && g++ -g *.cpp -o main.exe"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
    ]
}
